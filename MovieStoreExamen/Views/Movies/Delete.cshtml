@using Microsoft.AspNetCore.Mvc.Localization
@model MovieStoreExamen.Models.Movie
@inject IViewLocalizer L
@{
    ViewData["Title"] = @L["Verwijderen"];
}

<h1>@L["Verwijder"]</h1>

<h3>@L["Ben je zeker dat je deze film wil verwijderen?"]</h3>
<div>
    <h4>@L["Film"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rental_Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rental_Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount_Gent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount_Gent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount_Brussel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount_Brussel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount_Antwerpen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount_Antwerpen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount_Returned)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount_Returned)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MovieId" />
        <input type="submit" value=@L["Verwijder"] class="btn btn-danger" /> |
        <a asp-action="Index">@L["Terug naar Overzicht"]</a>
    </form>
</div>

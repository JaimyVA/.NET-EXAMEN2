@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<MovieStoreExamen.Models.Movie>
@inject IViewLocalizer L
@{
    ViewData["Title"] = @L["Alle Films"];
}

<h1>@L["Films"]</h1>

<p>
    <a asp-action="Create">@L["Voeg toe"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rental_Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount_Gent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount_Brussel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount_Antwerpen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount_Returned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rental_Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount_Gent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount_Brussel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount_Antwerpen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount_Returned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovieId">@L["Bewerk"]</a> |
                <a asp-action="Details" asp-route-id="@item.MovieId">@L["Details"]</a> |
                <a asp-action="Delete" asp-route-id="@item.MovieId">@L["Verwijder"]</a>
            </td>
        </tr>
}
    </tbody>
</table>

@using Microsoft.AspNetCore.Mvc.Localization
@model MovieStoreExamen.Models.Movie
@inject IViewLocalizer L
@{
    ViewData["Title"] = @L["Bewerk"];
}

<h1>@L["Bewerk"]</h1>

<h4>@L["Film"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovieId" />
            <div class="form-group">
                <label asp-for="MovieTitle" class="control-label"></label>
                <input asp-for="MovieTitle" class="form-control" />
                <span asp-validation-for="MovieTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental_Duration" class="control-label"></label>
                <input asp-for="Rental_Duration" class="form-control" />
                <span asp-validation-for="Rental_Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount_Gent" class="control-label"></label>
                <input asp-for="Amount_Gent" class="form-control" />
                <span asp-validation-for="Amount_Gent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount_Brussel" class="control-label"></label>
                <input asp-for="Amount_Brussel" class="form-control" />
                <span asp-validation-for="Amount_Brussel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount_Antwerpen" class="control-label"></label>
                <input asp-for="Amount_Antwerpen" class="form-control" />
                <span asp-validation-for="Amount_Antwerpen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount_Returned" class="control-label"></label>
                <input asp-for="Amount_Returned" class="form-control" />
                <span asp-validation-for="Amount_Returned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreId" class="control-label"></label>
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@L["Opslaan"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@L["Terug naar Overzicht"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

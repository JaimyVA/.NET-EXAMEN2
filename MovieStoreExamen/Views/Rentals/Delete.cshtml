@using Microsoft.AspNetCore.Mvc.Localization
@model MovieStoreExamen.Models.Rental
@inject IViewLocalizer L
@{
    ViewData["Title"] = @L["Verwijderen"];
}

<h1>@L["Verwijder"]</h1>

<h3>@L["Ben je zeker dat je deze lening wil verwijderen?"]</h3>
<div>
    <h4>@L["Lening"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RentalDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentalDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RentalExpiry)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentalExpiry)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.Lastname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.MovieTitle)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RentalId" />
        <input type="submit" value=@L["Verwijder"] class="btn btn-danger" /> |
        <a asp-action="Index">@L["Terug naar Overzicht"]</a>
    </form>
</div>

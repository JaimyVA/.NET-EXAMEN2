@model MovieStoreExamen.Areas.Identity.Data.ApplicationUserViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer L;


@{
    ViewData["Title"] = @L["Verander Rollen"];
}

<h2>@Model.UserName: @L["Verander Rollen"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Roles">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">@L["Gebruikersnaam"]</label>
                <input asp-for="UserName" class="form-control" asp-items="ViewBag.GroupId" disabled></input>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@L["Voornaam"]</label>
                <input asp-for="FirstName" class="form-control" asp-items="ViewBag.UserId" disabled></input>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@L["Achternaam"]</label>
                <input asp-for="LastName" class="form-control" disabled/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@L["Administrator"]</label>
                <input type="checkbox" asp-for="@Model.Administrator" />
                <span asp-validation-for="Administrator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@L["Klant"]</label>
                <input type="checkbox" asp-for="@Model.Customer" />
                <span asp-validation-for="Customer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@L["Medewerker"]</label>
                <input type="checkbox" asp-for="@Model.Worker"/>
                <span asp-validation-for="Worker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@L["Opslaan"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@L["Terug naar Overzicht"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}